<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="keywords" content="<%= config.keywords %>" />
  <meta name="author" content="<%= config.author %>" />
  <meta name="description" content="<%= config.description %>" />
  <% if(is_home() && page.current > 1){ %>
    <meta name="robots" content="noindex" />
  <% } %>
  <%
    var title = page.title;

    if (is_archive()){
      title = 'archive_a';

      if (is_month()){
        title += ': ' + page.year + '/' + page.month;
      } else if (is_year()){
        title += ': ' + page.year;
      }
    } else if (is_category() || title === "categories"){
      title = "category"
    } else if (is_tag() || title === "tags"){
      title = "tag"
    } else if (title === "friends") {
      title = "friend"
    } else if (title === "about") {
      title = "about"
    }
  %>
  <title>
    <% if (title) { %>
      <%= __(title) %> 
      <% if (page.tag) { %> : <%= page.tag %><% } %>
      <% if (page.category) { %> : <%= page.category %><% } %>
    <% } else { %>
      <%= config.title %>
    <% } %>
  </title>

  <% if (theme.favicon.enable){ %>
    <link rel="apple-touch-icon" href="<%- theme.favicon.touch_icon %>">
    <link rel="icon" href="<%- theme.favicon.icon %>">
  <% } %>

  <!-- Raleway-Font -->
  <link href="https://fonts.googleapis.com/css?family=Montserrat|Roboto:400,400italic,600|Roboto+Mono" rel="stylesheet">

  <!-- hexo site css -->
  <%- css(['/css/base.css', '/css/common.css', '/iconfont/iconfont.css']) %>

  <% if (is_home()){ %>
    <%- css(['/css/index.css']) %>
  <% } %>

  <% if (is_post()){ %>
    <%- css(['/css/post.css']) %>
  <% } %>

  
  <!-- Include klaro css for consent banner -->
  <%- css(['/css/klaro.css']) %>

  <!-- jquery3.3.1 -->
  <%- js(['/js/jquery.min.js']) %>

  <!-- fancybox -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.js" rel="stylesheet">
  <script async src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.js"></script>

  <%- js(['/js/fancybox.js']) %>

  <%- partial('_partial/tagmanager_start') %>

  <% if (theme.googlecrux.enable) { %>
    <!-- Googel site verification -->
    <meta name="google-site-verification" content='<%- theme.googlecrux.id %>'' />
  <% } %>

